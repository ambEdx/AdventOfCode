<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Days.Views.Day1.Day1Page1"
             Title="Day 1 Input">
    <Grid RowDefinitions="Auto,*,Auto">
        <Label Grid.Row="0" Margin="6" 
               FontSize="Subtitle"
               HorizontalOptions="Center"
               Text="Input Food" />
        <Editor Grid.Row="1" Margin="6"
                FontSize="Small"
                Text="{Binding CaloriesRaw}" />
        <Grid Grid.Row="2" ColumnDefinitions="Auto,Auto" HorizontalOptions="Center">
            <Button Grid.Column="0" Margin="6" Text="Clear" Command="{Binding ClearCommand}" />
            <Button Grid.Column="1" Margin="6" Text="Save" Command="{Binding SaveCommand}" />
        </Grid>
    </Grid>
</ContentPage>